generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "darwin"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int        @id @default(autoincrement())
  create_tm Int
  path      String
  items     TaskItem[]
}

model TaskItem {
  id              Int    @id @default(autoincrement())
  task_id         Int
  img_name        String @default("")
  size            Int
  compressed_size Int?
  status          String
  task            Task   @relation(fields: [task_id], references: [id])
}

model Password {
  id        Int    @id @default(autoincrement())
  password  String
  username  String
  remark    String
  create_tm Int
}

model Config {
  key   String @id
  value String
}

model Todo {
  id          Int    @id @default(autoincrement())
  todo        String
  start_tm    Int?
  create_tm   Int
  status      Int
  type        Int
  finished_tm Int?
}
