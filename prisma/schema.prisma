generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "darwin"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int        @id @default(autoincrement())
  create_tm Int
  path      String
  items     TaskItem[]
}

model TaskItem {
  id              Int    @id @default(autoincrement())
  task_id         Int
  img_name        String @default("")
  size            Int
  compressed_size Int?
  status          String
  task            Task   @relation(fields: [task_id], references: [id])
}
